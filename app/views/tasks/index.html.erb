<div class="w-full ">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg flex justify-center items-center z-10" id="notice"><%= notice %></p>
  <% end %>

  <div class="flex items-center justify-between font-bold p-7 bg-zinc-800 border border-black">
    <h1 class="font-bold text-4xl">Task Manager</h1>
    <%= link_to "Add task", new_task_path, class: "rounded-lg py-3 px-5 bg-blue-600 text-white block font-medium" %>
  </div>

  <div id="tasks" class="min-w-full min-h-full px-7 py-7 text-black">
    <%= render @tasks %>
  </div>
</div>

